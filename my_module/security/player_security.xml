<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">

        <record id="module_category_player" model="ir.module.category">
            <field name="name">Player</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_player_staff" model="res.groups">
            <field name="name">Staff</field>
            <field name="category_id" ref="module_category_player"></field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"></field>
        </record>

        <record id="group_player_hr" model="res.groups">
            <field name="name">HR</field>
            <field name="category_id" ref="module_category_player"></field>
            <field name="implied_ids" eval="[(4, ref('group_player_staff'))]"></field>
        </record>

    </data>

    <data noupdate="1">

        <record id="player_comp_rule" model="ir.rule">
            <field name="name">Player</field>
            <field name="model_id" ref="model_player" />
            <field name="domain_force">[('gender','!=','female')]</field>
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_unlink" eval="True" />
        </record>

    </data>

</odoo>