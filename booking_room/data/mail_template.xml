<?xml version="1.0" ?>
<odoo>
    <data noupdate="0">

        <template id="invite_meeting_mail_template">
            <p style="margin: 0px;">
                <p>Dear Sir/Madam<t t-esc="dear"/>,</p>
                <p style="margin-top: 8px;">You are invited to a meeting. Please attend at <t t-esc="date_obj"/>, room <t t-esc="object.room_id.id"/>.</p>
            </p>
            <p>Thank you!</p>
            <p style="padding-top: 24px; padding-bottom: 16px;">
                <a t-att-href="access_link" style="background-color:#875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;">
                        View <t t-esc="model_description or 'Applications'"/>
                </a>
            </p>
            <br></br>
        </template>

    </data>
</odoo>